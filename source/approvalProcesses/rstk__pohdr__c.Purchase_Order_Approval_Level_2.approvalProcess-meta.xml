<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>rstk__pohdr_ordno__c</field>
        <field>Name</field>
        <field>Owner</field>
        <field>rstk__pohdr_totamt__c</field>
        <field>rstk__pohdr_vendno__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>kevin.beals@bluescape.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>First Level PO Approval</label>
        <name>First_Level_PO_Approval</name>
    </approvalStep>
    <description>Purchase Orders &gt;$5,000 AND &lt;=$50,000</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>rstk__pohdr__c.rstk__pohdr_ordsts__c</field>
            <operation>equals</operation>
            <value>2-Firmed</value>
        </criteriaItems>
        <criteriaItems>
            <field>rstk__pohdr__c.rstk__pohdr_totamt__c</field>
            <operation>lessOrEqual</operation>
            <value>50000</value>
        </criteriaItems>
        <criteriaItems>
            <field>rstk__pohdr__c.rstk__pohdr_totamt__c</field>
            <operation>greaterThan</operation>
            <value>5000</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approval_Status_Denied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Status_Firmed</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Status_Approval_Processing</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Purchase Order Approval Level 2 (VP Fin)</label>
    <recallActions>
        <action>
            <name>Approval_Status_None</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Order_Status_Firmed</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
