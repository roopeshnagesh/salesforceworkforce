<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Project_Manager_Deployment_Lead</submitter>
        <type>roleSubordinatesInternal</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Status__c</field>
        <field>Event_Type__c</field>
        <field>Name</field>
        <field>Requester__c</field>
        <field>Event_Date__c</field>
        <field>Demo_Unit__c</field>
        <field>Shipping_Date__c</field>
        <field>Install_Date__c</field>
        <field>Removal_Date__c</field>
        <field>Shipping_Cost__c</field>
        <field>Financial_Responsibility__c</field>
        <field>Primary_Contact__c</field>
        <field>Description__c</field>
        <field>Opportunity__c</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>LastModifiedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Demo_Install_Approval_has_been_given</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>peter.shutte@bluescape.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Peter first. Then it goes to Kevin.</description>
        <label>Get VP approval</label>
        <name>Get_VP_approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Demo_Install_Approval_has_been_given</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>kevin.beals@bluescape.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Kevin needs to approve

As of 8/26/16, Demian/Liz informed Joe to change to Kevin.</description>
        <label>Get Exec Approval</label>
        <name>Get_Exec_Approval</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>After Bluescape Event is submitted requesting a Demo Installation, Don fills in the shipping cost, shipping date, and assigns a demo unit to the event. Then it goes to Josh and/or Sue for approval. Then it goes to Liz.</description>
    <emailTemplate>Bluescape_Event_Demo_Unit_Management/Demo_Event_Submitted</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND 2 AND 3 AND 4 AND 5 AND 6 AND 7 AND 8</booleanFilter>
        <criteriaItems>
            <field>Bluescape_Demo__c.Event_Type__c</field>
            <operation>equals</operation>
            <value>Demo Installation</value>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Shipping_Cost__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Shipping_Address__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Financial_Responsibility__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Removal_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Name</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Shipping_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Bluescape_Demo__c.Install_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Handle_approved_demo_Installation_finances</name>
            <type>Task</type>
        </action>
        <action>
            <name>Send_email_that_event_is_fully_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Ship_Demo_Unit_Don</name>
            <type>Task</type>
        </action>
        <action>
            <name>Ship_Demo_Unit_Ross</name>
            <type>Task</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Demo_Event_Rejected_Notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Status_Denied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Unset_Approved_Date</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Demo_Event_Approval_needed</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Demo_Event_final_approval_has_been_requested</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Status_Waiting_for_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Submit_for_Approval_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Demo Install Request Approval Process 2</label>
    <recallActions>
        <action>
            <name>Recalling_a_demo_unit_approval_request</name>
            <type>Alert</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
