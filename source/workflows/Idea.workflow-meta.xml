<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>New_Idea_Posted_Alert_to_Community_Manager</fullName>
        <ccEmails>andy.markham@bluescape.com</ccEmails>
        <description>New Idea Posted Alert to Community Manager</description>
        <protected>false</protected>
        <recipients>
            <recipient>Community_Manager</recipient>
            <type>role</type>
        </recipients>
        <recipients>
            <recipient>marcel.dubois@bluescape.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>tim.cashman@bluescape.com</recipient>
            <type>user</type>
        </recipients>
        <senderAddress>support@bluescape.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Communities_Email_Templates/New_Idea_Posted_in_CPC</template>
    </alerts>
    <alerts>
        <fullName>Send_idea_post_notification</fullName>
        <ccEmails>andy.markham@bluescape.com</ccEmails>
        <description>Send idea post notification</description>
        <protected>false</protected>
        <recipients>
            <recipient>kelly.arellano@bluescape.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>marcel.dubois@bluescape.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>phil.nguyen@bluescape.com</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Communities_Email_Templates/Communities_Post_an_Idea</template>
    </alerts>
    <rules>
        <fullName>New Idea</fullName>
        <actions>
            <name>New_Idea_Posted_Alert_to_Community_Manager</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Idea.CreatedDate</field>
            <operation>equals</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Idea.CommunityId</field>
            <operation>contains</operation>
            <value>Customer Community</value>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>Post an Idea Notification</fullName>
        <actions>
            <name>Send_idea_post_notification</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Idea.Title</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>User.ContactId</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
